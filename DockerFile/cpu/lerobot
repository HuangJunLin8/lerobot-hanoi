#!/bin/bash

# 容器配置
CONTAINER_NAME="lerobot"
IMAGE_NAME="lerobot:v1.0"
VOLUME_MAP="/mnt/data/lerobot/data:/share"
EXTRA_ARGS="--privileged  -v $VOLUME_MAP -e DISPLAY=$DISPLAY -v /tmp/.X11-unix:/tmp/.X11-unix"

# 检查 Docker 和 NVIDIA 容器工具包
verify_environment() {
    if ! command -v docker &> /dev/null; then
        echo "错误：Docker 未安装！"
        exit 1
    fi
}

# 启动容器（完整参数）
start_container() {
    if [ "$(docker ps -q -f name=$CONTAINER_NAME)" ]; then
        echo "容器已在运行，正在进入..."
        docker exec -it $CONTAINER_NAME /bin/bash
    elif [ "$(docker ps -aq -f name=$CONTAINER_NAME)" ]; then
        echo "启动已停止的容器..."
        docker start $CONTAINER_NAME
        docker exec -it $CONTAINER_NAME /bin/bash
    else
        echo "创建并启动新容器（带 GPU 和 X11 支持）..."
        docker run -it -d \
            --name $CONTAINER_NAME \
            $EXTRA_ARGS \
            $IMAGE_NAME \
            /bin/bash
        
        # 首次启动后自动进入
        docker exec -it $CONTAINER_NAME /bin/bash
    fi
}

# 容器状态检查
check_status() {
    echo -e "\n容器状态："
    docker ps -a -f name=$CONTAINER_NAME --format "table {{.ID}}\t{{.Names}}\t{{.Status}}\t{{.Image}}"
    
}

# 用户界面
show_menu() {
    echo -e "\n\033[1mLeroBot 容器管理\033[0m"
    echo "--------------------------------"
    echo "1) 启动并进入容器 (默认)"
    echo "2) 停止容器"
    echo "3) 重启容器"
    echo "4) 查看容器状态"
    echo "5) 删除容器（危险！）"
    echo "q) 退出"
    echo "--------------------------------"
    read -p "请选择操作 [1] > " choice
}

# 主逻辑
verify_environment
while true; do
    show_menu
    case "${choice:-1}" in
        1)
            start_container
            ;;
        2)
            echo "正在停止容器..."
            docker stop $CONTAINER_NAME
            ;;
        3)
            echo "正在重启容器..."
            docker restart $CONTAINER_NAME
            sleep 2  # 等待容器完全启动
            docker exec -it $CONTAINER_NAME /bin/bash
            ;;
        4)
            check_status
            ;;
        5)
            read -p "确认删除容器？所有未持久化的数据将丢失！ (y/N) " confirm
            if [[ $confirm =~ [yY] ]]; then
                docker stop $CONTAINER_NAME 2>/dev/null
                docker rm $CONTAINER_NAME
                echo "容器已删除"
            else
                echo "操作已取消"
            fi
            ;;
        q|Q)
            echo "退出脚本"
            exit 0
            ;;
        *)
            echo "无效选项！"
            ;;
    esac
done
